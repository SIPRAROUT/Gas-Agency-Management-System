                    <div class="card">
                        <div class="card-body">
                            <div class="basic-form">
                                <form>
                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            <label>Invoice No</label>
                                            <select class="form-control sel1" id="ddl_InvoiceNo" tabindex="6">
                                                <option value="" selected hidden>--Select Invoice No--</option>
                                                @{
